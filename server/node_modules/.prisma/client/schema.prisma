generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Site {
  id      String  @id @default(cuid())
  title   String
  bio     String?
  logoUrl String?
  about   String?
  theme   Json

  fonts     Font[]
  pages     Page[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Font {
  id        String   @id @default(cuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id])
  family    String
  weight    String
  style     String
  url       String
  createdAt DateTime @default(now())
}

model Page {
  id        String   @id @default(cuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id])
  path      String
  seoTitle  String?
  seoDesc   String?
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BlockKind {
  HERO
  ABOUT
  SERVICES_GRID
  CTA
  OPTIN_A
}

model Block {
  id     String    @id @default(cuid())
  pageId String
  page   Page      @relation(fields: [pageId], references: [id])
  kind   BlockKind
  order  Int
  data   Json
}
